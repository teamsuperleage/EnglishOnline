@model English.WebApi.Models.ResgisterViewModel
@using BotDetect.Web.Mvc;
<link href="@BotDetect.Web.CaptchaUrls.Absolute.LayoutStyleSheetUrl" rel="stylesheet" type="text/css" />
<div class="content-w3ls">
    <div class="content-agile1">
        <h2 class="agileits1">Official</h2>
        <p class="agileits2">Lorem ipsum dolor sit amet, consectetur adipiscing elit.</p>
    </div>
    <div class="content-agile2">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            @Html.AntiForgeryToken();
            @Html.ValidationSummary(false, "", new { @class = "error" })

            if (ViewData["SuccessMsg"] != null)
            {
                <div class="alert alert-success" role="alert">
                    <strong>Chúc mừng bạn! </strong> đã đăng ký thành công.
                    <br />Vui lòng click <a href="/dang-nhap.html">vào đây </a>để đăng nhập.
                </div>
            }
            <div class="form-control w3layouts">
                @Html.TextBoxFor(model => model.FullName, new { @id = "fullname", @placeholder = "Full Name", @title = "Please enter your Full Name", required = true })

            </div>

            <div class="form-control w3layouts">
                @Html.TextBoxFor(model => model.Email, new { @id = "email", @placeholder = "mail@example.com", @title = "Please enter a valid email", required = true })

            </div>
            <div class="form-control w3layouts">
                @Html.TextBoxFor(model => model.Address, new { @id = "address", @placeholder = "Address", @title = "Please enter your address", required = true })

            </div>
            <div class="form-control w3layouts">
                @Html.TextBoxFor(model => model.Phone, new { @id = "phone", @placeholder = "Phone Number", @title = "Please enter your Phone Number", required = true })

            </div>
            <div class="form-control w3layouts">
                @Html.TextBoxFor(model => model.UserName, new { @id = "userName", @placeholder = "UserName", @title = "Please enter your UserName", required = true })

            </div>
            <div class="form-control agileinfo">
                @Html.PasswordFor(model => model.Password, new { @id = "password", @class = "lock", @placeholder = "Password", @title = "Please enter your Password", required = true })

            </div>
            <input type="submit" class="register" value="Register">
            <p class="wthree w3l">Fast Signup With Your Favourite Social Profile</p>
        }
        <ul class="social-agileinfo wthree2">
            <li><a href="#"><i class="fa fa-facebook"></i></a></li>
            <li><a href="#"><i class="fa fa-youtube"></i></a></li>
            <li><a href="#"><i class="fa fa-twitter"></i></a></li>
            <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
        </ul>
    </div>
    <div class="clear"></div>
</div>

